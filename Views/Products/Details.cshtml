@model SchoolSuppliesInventory.Entities.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Product Details</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Product Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Available Quantity</dt>
                <dd class="col-sm-9">@Model.AvailableQuantity</dd>

                <dt class="col-sm-3">Unit Price</dt>
                <dd class="col-sm-9">@Model.UnitPrice.ToString("C", new System.Globalization.CultureInfo("en-PH"))</dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.Category.Name</dd>

                <dt class="col-sm-3">Supplier</dt>
                <dd class="col-sm-9">@Model.Supplier.Name</dd>
            </dl>
        </div>
    </div>
</div>
