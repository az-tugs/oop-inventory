@model SchoolSuppliesInventory.Entities.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container-fluid">
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">
            <i class="fas fa-exclamation-triangle"></i> Confirm Delete
        </h4>
        <p>Are you sure you want to delete this product? This action cannot be undone.</p>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Product Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Available Quantity</dt>
                <dd class="col-sm-9">@Model.AvailableQuantity</dd>

                <dt class="col-sm-3">Unit Price</dt>
                <dd class="col-sm-9">@Model.UnitPrice.ToString("C", new System.Globalization.CultureInfo("en-PH"))</dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.Category.Name</dd>

                <dt class="col-sm-3">Supplier</dt>
                <dd class="col-sm-9">@Model.Supplier.Name</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Confirm Delete
            </button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                <i class="fas fa-eye"></i> View Details
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </form>
</div>
