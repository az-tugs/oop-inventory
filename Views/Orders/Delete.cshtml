@using SchoolSuppliesInventory.Entities
@model Order

@{
    ViewData["Title"] = "Delete Order";
}

<div class="container-fluid">
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">
            <i class="fas fa-exclamation-triangle"></i> Confirm Delete
        </h4>
        <p>Are you sure you want to delete this order? This action cannot be undone.</p>
        <hr>
        <p class="mb-0">All order lines will be removed and product stock will be restored.</p>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Order Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <strong>Order ID:</strong> @Model.Id
                </div>
                <div class="col-md-4">
                    <strong>Order Date:</strong> @Model.OrderDate.ToString("M/d/yyyy")
                </div>
                <div class="col-md-4">
                    <strong>Total Amount:</strong> @Model.TotalAmount.ToString("C", new System.Globalization.CultureInfo("en-PH"))
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">Order Lines to be Deleted</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Line Total</th>
                            <th>Stock to Restore</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var orderLine in Model.OrderLines)
                        {
                            <tr>
                                <td>@orderLine.Product.Name</td>
                                <td>@orderLine.Quantity</td>
                                <td>@orderLine.UnitPrice.ToString("C", new System.Globalization.CultureInfo("en-PH"))</td>
                                <td>@orderLine.LineTotal.ToString("C", new System.Globalization.CultureInfo("en-PH"))</td>
                                <td>
                                    <span class="badge bg-success">+@orderLine.Quantity</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Confirm Delete
            </button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                <i class="fas fa-eye"></i> View Details
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </form>
